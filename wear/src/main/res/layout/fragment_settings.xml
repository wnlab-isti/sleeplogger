<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.cnr.isti.doremi.sleeplogger.SettingsFragment"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampling\nInterval"
            android:id="@+id/samplingIntervalLabel"
            android:layout_marginStart="39dp"
            android:layout_marginTop="40dp"
            android:textSize="10sp"
            android:maxLines="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampling\nfrequency"
            android:id="@+id/samplingFrequencyLabel"
            android:maxLines="2"
            android:textSize="10sp"
            android:layout_below="@+id/samplingIntervalLabel"
            android:layout_alignStart="@+id/samplingIntervalLabel"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI Refreshing\nInterval"
            android:id="@+id/UIRefreshingInterval"
            android:layout_below="@+id/samplingFrequencyLabel"
            android:layout_alignStart="@+id/samplingFrequencyLabel"
            android:textSize="10sp"
            android:textIsSelectable="false"
            android:maxLines="2"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UI Refreshing\nFrequency"
            android:id="@+id/UIRefreshingFrequency"
            android:maxLines="2"
            android:textSize="10sp"
            android:layout_below="@+id/UIRefreshingInterval"
            android:layout_alignStart="@+id/UIRefreshingInterval"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>
</ScrollView>
